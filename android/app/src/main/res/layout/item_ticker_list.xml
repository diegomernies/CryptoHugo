<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/colorDarkGrayBackground"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        app:srcCompat="@mipmap/ic_launcher" />

    <TableLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content">

        <TableRow android:id="@+id/rowTitle"
            android:layout_width="0dp"
            android:layout_weight="5">

            <TextView
                android:id="@+id/titleTicker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="BitCoin(BTC)"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:textColor="@color/greenPrimary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/valueUsdPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="1999999.99"
                android:textAlignment="textEnd"
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                android:textColor="@color/greenPrimary"
                android:textStyle="bold"
                android:layout_marginRight="10dp"/>
        </TableRow>

        <TableRow android:id="@+id/rowBtcPrice"
            android:layout_width="0dp"
            android:layout_weight="5">

            <TextView
                android:id="@+id/lbl1hs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Var 1 hs:"
                android:textAlignment="viewStart"
                android:textColor="@color/colorLightGrayTextColor"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text1hs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1.14%"
                android:layout_marginLeft="4dp"
                android:textAlignment="textStart"
                android:textColor="@color/colorLightGrayTextColor"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/lbl24hs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Var 24 hs:"
                android:textAlignment="viewStart"
                android:textColor="@color/colorLightGrayTextColor"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text24hs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1.14%"
                android:layout_marginLeft="4dp"
                android:textAlignment="textStart"
                android:textColor="@color/colorLightGrayTextColor"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/lbl7Days"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Var 7d:"
                android:textAlignment="viewStart"
                android:textColor="@color/colorLightGrayTextColor"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text7days"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1.14%"
                android:layout_marginLeft="4dp"
                android:textAlignment="textStart"
                android:textColor="@color/colorLightGrayTextColor"
                android:textSize="10sp" />
        </TableRow>

        <TableRow android:id="@+id/rowMarketInfo"
            android:layout_width="0dp"
            android:layout_weight="5">

            <TextView
                android:id="@+id/lblCriptoDivisaShort"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Circula:"
                android:textAlignment="viewStart"
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                android:textColor="@color/colorLightGrayTextColor"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textCirculating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:layout_marginLeft="5dp"
                android:text="1999999.99"
                android:textAlignment="textStart"
                android:textColor="@color/colorLightGrayTextColor"
                android:textSize="10sp" />


            <TextView
                android:id="@+id/lblBtcPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Precio BTC:"
                android:textAlignment="viewStart"
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                android:textColor="@color/colorLightGrayTextColor"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valueBtcPrice"
                android:layout_width="0dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="1999999.99"
                android:textAlignment="viewStart"
                android:textColor="@color/colorLightGrayTextColor"
                android:textSize="10sp" />



        </TableRow>


    </TableLayout>

</LinearLayout>

